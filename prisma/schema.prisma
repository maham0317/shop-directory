generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  quantity      Int      @default(0)
  price         Float    @default(0.0) // This will be the Sale Price
  purchasePrice Float    @default(0.0)
  manualPrice   Float    @default(0.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bill {
  id           Int        @id @default(autoincrement())
  customerName String?
  totalAmount  Float
  items        BillItem[]
  createdAt    DateTime   @default(now())
}

model BillItem {
  id          Int    @id @default(autoincrement())
  billId      Int
  bill        Bill   @relation(fields: [billId], references: [id])
  productId   Int
  productName String
  quantity    Int
  price       Float
  purchasePrice Float    @default(0.0)
  total       Float
}
